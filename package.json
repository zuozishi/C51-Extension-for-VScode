{
    "name": "c51",
    "displayName": "C51",
    "description": "C51",
    "version": "0.0.8",
    "publisher": "Zuozishi",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:c"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/zuozishi/C51-Extension-for-VScode"
    },
    "main": "./extension",
    "contributes": {
        "hoverProvider":"true",
        "grammars": [{
			"language": "c",
			"scopeName": "source.c",
			"path": "c51.tmLanguage.json"
		}],
        "snippets": [{
			"language": "c",
			"path": "c51.snippets.json"
		}],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.buildC51",
                    "when": "resourceLangId == c",
                    "group": "C51"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.buildC51",
                "title": "Build C51"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "C51 configuration",
            "properties": {
                "C51.binDir": {
                    "type": "string",
                    "default": "C:\\Program Files (x86)\\Keil C51\\C51\\BIN",
                    "description": "The C51 Bin Directory"
                },
                "C51.OnlyOutputHexFile":{
                    "type":"boolean",
                    "default":true,
                    "description":"Only Output Hex File without OBJ and LST file."
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "eslint": "^4.11.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "vsce": "^1.49.2"
    }
}
